<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

<a href="/new" class="btn btn-danger">Add a new message!</a>
<br>
<br>

<table class="table table-hover">
  {{#each messages}}
    <tr class="table-dark">
      <th class="text-success" style="width: 10%" scope="row">{{user}}</th>
      <td>
        <p>{{text}}</p>
        <small class="text-muted">Submitted on: {{added}}</small>
      </td>
    </tr>
  {{/each}}

</table>